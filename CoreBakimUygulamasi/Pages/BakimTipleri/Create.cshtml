@page
@model CoreBakimUygulamasi.Pages.BakimTipleri.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/PAges/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Yeni Bakım Tipi Oluştur</h2>
<br />
<form method="post">
    <div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="BakimTipi.BakimAdi"></label>
            </div>
            <div class="col-5">
                <input asp-for="BakimTipi.BakimAdi" class="form-control">
            </div>
            <span asp-validation-for="BakimTipi.BakimAdi" class="text-danger"></span>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="BakimTipi.BakimFiyati"></label>
            </div>
            <div class="col-5">
                <input asp-for="BakimTipi.BakimFiyati" class="form-control">
            </div>
                <span asp-validation-for="BakimTipi.BakimFiyati" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" value="Oluştur" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">İptal</a>
                    </div>
                </div>
            </div>
        </div>
        </div>
</form>
@section  Scripts           
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
 }